    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "1.0 Register Admin (With ROLE_ADMIN)",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"admin_user\",\n    \"email\": \"nexra.admin@gmail.com\",\n    \"password\": \"AdminPass@123\",\n    \"roles\": [\"ROLE_ADMIN\", \"ROLE_USER\"]\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "1.1 Register User (Default Role)",
                    "request": {
