{
    "info": {
        "_postman_id": "nexra-user-service-collection",
        "name": "Nexra User Service (Enterprise)",
        "description": "Postman collection for Nexra User Service API including Enterprise Authentication (OTP, Refresh Token, Logout) and User Management.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
